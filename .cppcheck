<?xml version="1.0" encoding="UTF-8"?>

<project version="1">
    <!-- Platform Configuration -->
    <platform>native</platform>
    
    <!-- Paths to Check -->
    <paths>
        <dir name="software/src"/>
        <dir name="software/include"/>
    </paths>
    
    <!-- Include Directories -->
    <includedir>
        <dir name="software/include"/>
        <dir name="/opt/ti/msp430-gcc/include"/>
    </includedir>
    
    <!-- Defines -->
    <defines>
        <define name="__MSP430FR2355__"/>
        <define name="__MSP430__"/>
    </defines>
    
    <!-- Analysis Settings -->
    <check-config/>
    <check-library/>
    <check-unused-templates/>
    
    <!-- Enable All Checks -->
    <enable>all</enable>
    
    <!-- Specific Check Configurations -->
    <addon>misra.json</addon>
    <addon>cert.json</addon>
    
    <!-- Suppressions File -->
    <suppressions-list>
        <suppression>cppcheck-suppressions.txt</suppression>
    </suppressions-list>
    
    <!-- Standards -->
    <standards>
        <c>c11</c>
    </standards>
    
    <!-- Max Configurations to Check -->
    <max-configs>32</max-configs>
    
    <!-- Analysis Options -->
    <certainty>exhaustive</certainty>
    <check-level>exhaustive</check-level>
    
    <!-- Exclude Patterns -->
    <exclude>
        <path name="software/test/"/>
        <path name="software/build/"/>
        <path name="software/lib/third_party/"/>
    </exclude>
</project>
